<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <!-- authentification -->



    <Button
        android:id="@+id/premiere_aut2"
        style="@style/aut2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="340dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/premiere_aut2"
        android:layout_marginLeft="300dp"
        android:text="@string/aut"
        android:textSize="@dimen/normal_text_size" />
    <!-- aide -->
        
      <Button
        android:id="@+id/premiere_aide"
        style="@style/premiere_aide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/premiere_aut2"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@id/premiere_aut2"/>

    <TextView
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/premiere_aide"
        android:layout_marginLeft="300dp"
        android:layout_toRightOf="@id/textView1"
        android:text="@string/prem_aide"
        android:textSize="@dimen/normal_text_size"  />

</RelativeLayout>